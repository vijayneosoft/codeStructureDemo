<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="userTextViewDetails">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
    </style>

    <style name="userEditTextDetails">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <!--<item name="android:background">@drawable/shape_rect_stroke_pink</item>-->
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>
